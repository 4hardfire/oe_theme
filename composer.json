{
    "name": "ec-europa/oe_theme",
    "description": "OpenEuropa base theme.",
    "type": "drupal-theme",
    "license": "EUPL-1.1",
    "minimum-stability": "dev",
    "prefer-stable": true,
    "require": {
        "ec-europa/oe_core": "*"
    },
    "require-dev": {
        "ec-europa/oe-code-review": "^0.0.2",
        "composer/installers": "^1.2",
        "nuvoleweb/drupal-component-scaffold": "^0.1.0",
        "drupal/console": "~1",
        "drush/drush": "*",
        "drupal/coder": "8.2.8",
        "drupal/core": "~8",
        "drupal/drupal-extension": "^3.3"
    },
    "extra": {
        "installer-paths": {
            "build/core": ["type:drupal-core"],
            "build/modules/contrib/{$name}": ["type:drupal-module"],
            "build/themes/contrib/{$name}": ["type:drupal-theme"]
        }
    }
}
