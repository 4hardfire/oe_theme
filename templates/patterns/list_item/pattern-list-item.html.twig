{% spaceless %}
{#
  @file
  Default item list component.

  Parameters:
    - "meta" (array) (default: []): Meta information for the Content Item
    - "title" (string) (default: ''): Title for the list Content Item
    - "url" (string) (default: ''): url path for the title Content Item
    - "detail" (string) (default: ''): Description of Content Item
    - "field_list" (array) (default: []): Field elements
#}
<article class="ecl-content-item ecl-u-d-sm-flex ecl-u-pb-m">
  <div class="ecl-u-flex-grow-1">
    {% if meta is not empty %}
      <div class="ecl-content-item__meta ecl-u-type-s ecl-u-type-color-grey-75">{{ meta|join(" | ") }}</div>
    {% endif %}
    <div class="ecl-content-item__title ecl-u-type-prolonged-m ecl-u-type-bold ecl-u-mt-xs">
      {%- if url %}
        {% include '@ecl-twig/link' with {
          link: {
            type: 'standalone',
            label: title,
            path: url
          }
        } only %}
      {% else %}
        {{ title }}
      {%- endif -%}
    </div>
    {% if detail is not empty %}
      <div class="ecl-content-item__description ecl-u-type-paragraph ecl-u-type-color-grey-100 ecl-u-mt-xs">{{ detail }}</div>
    {% endif %}
    {% if field_list %}
      {% include '@oe_theme/patterns/field_list/pattern-field-list.html.twig' with {
        variant: 'horizontal',
        items: field_list
      } %}
    {% endif %}
  </div>
</article>
{% endspaceless %}
