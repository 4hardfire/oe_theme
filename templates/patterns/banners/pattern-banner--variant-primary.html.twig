{#
/**
 * @file
 * Hero banner component.
 */
#}

{% set _link = {'link' : {'path' : url, 'label' : label}} %}

{% if 'page' in modifier|render %}
{% include '@ecl-twig/ec-component-page-banner/ecl-page-banner.html.twig' with {
  title: title,
  baseline: description,
  link: {
    link: _link,
    icon: {
      path: "static/media/icons.865a18d2.svg",
      type: "ui",
      name: "corner-arrow",
      size: "xs",
      transform: "rotate-90"
    }
  },
  type: "primary",
} %}
{% endif %}

{% if 'hero' in modifier|render %}
  {% include '@ecl-twig/ec-component-hero-banner/ecl-hero-banner.html.twig' with {
    title: title,
    baseline: description,
    link: {
      link: _link,
      icon: {
        path: "static/media/icons.865a18d2.svg",
        type: "ui",
        name: "corner-arrow",
        size: "xs",
        transform: "rotate-90"
      }
    },
    type: "primary",
  } %}
{% endif %}
