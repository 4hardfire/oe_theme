{#
/**
 * @file
 * Page banner.
 */
#}

{% set _link = {'path' : url, 'label' : label, icon_position: 'after'} -%}

{% set _variant = variant %}
{% if 'shade' in _variant %}
  {% set _variant = 'image-shade' %}
{% endif %}

<div{{ container_attributes }}>
  {% include '@ecl-twig/page-banner' with {
    title: title,
    baseline: description,
    link: {
      link: _link,
      icon: {
        path: ecl_icon_path,
        type: "ui",
        name: "corner-arrow",
        transform: "rotate-90",
        size: "xs",
      }
    },
    image: image.src,
    type: _variant,
    centered: alignment == 'center'
  } only %}
</div>
