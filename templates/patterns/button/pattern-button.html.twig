{#
/**
 * @file
 * Button.
 */
#}
{% if variant == 'default' %}
  {% include '@ecl/link' with {
    link: {
      'type': type_attribute,
      'label': label,
      'path': href,
      'icon_position': icon_position
    },
    'icon': {
      'name': icon
    },
    'icon_position': icon_position,
    'label': label,
  } only %}
{% else %}
  {% include '@ecl/button' with {
    'label': label,
    'variant': variant|replace({'_':'-'}),
    'type': type_attribute,
    'icon': {
      'name': icon
    },
    'icon_position': icon_position,
    'disabled': disabled
  } only %}
{% endif %}
