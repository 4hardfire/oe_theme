{% set hidden_num = total_num - (items|slice(0, hide_from)|length + items|slice(hide_to)|length) %}

{% set _toggle_collapsed = toggle_collapsed|default('Show @numb more items'|trans({'@numb': hidden_num})) %}
{% set _toggle_expanded = toggle_expanded|default('Hide @numb items'|trans({'@numb': hidden_num})) %}


{% include '@ecl/timeline' with {
  'toggle_collapsed': _toggle_collapsed,
  'toggle_expanded': _toggle_expanded,
  'hide': {
    'from': hide_from,
    'to': hide_to,
  },
  'items': items,
  'icon_path': ecl_icon_path,
} only %}
