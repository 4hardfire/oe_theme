{#
/**
 * @file
 * Default implementation for the navigation menu component.
 */
#}


{% set _number = number|default(1) %}
{% set _alignment = alignment|default('horizontal') %}
{% set _items = items|to_ecl_menu_links(_number, _alignment) %}

{% if _items %}
  {% include '@ecl-twig/menu-legacy' with {
    label: label|default('Menu'),
    items: _items,
    icon_path: ecl_icon_path
  } only %}
{% endif %}
