{#
/**
 * @file
 * Sical media links: horizontal.
 */
#}

{% set _links = [] %}
{% for _link in links %}
  {% set _links = _links|merge([{
    path: _link.url,
    label: _link.label
  }]) %}
  {% if _link.service is not empty %}
    {% set _link = _link|merge([{
      icon_position: 'before',
      icon: [
        {
          path: ecl_social_icon_path,
          name: _link.service,
          size: 'xl',
          extra_classes: 'ecl-social-media-follow__icon',
        },
        {
          path: ecl_social_icon_path,
          name: _link.service ~ '_hover',
          size: 'xl',
          extra_classes: 'ecl-social-media-follow__icon-hover',
        }
      ]
    }]) %}
  {% endif %}
{% endfor %}

{% include '@ecl-twig/social-media-follow' with {
  'description': title,
  'links': _links,
} %}
