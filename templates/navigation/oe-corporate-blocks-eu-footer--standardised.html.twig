{#
/**
 * @file
 * Theme override for the corporate European Union footer block.
 *
 * Available variables:
 * - site_owner: Site's owner.
 * - site_specific_footer: renderable array for site specific footer links
 * - corporate_footer: renderable array for corporate footer links
 * @see ./module/contrib/oe_corporate_blocks/templates/oe-corporate-blocks-eu-footer.html.twig
 */
#}

{% set _logo_path = ecl_logo_path ~ '/logo--' ~ current_language_id|to_internal_language_id ~ '.svg' %}

{% set _sections = [
  {
    'title': {
      'link': {
        'label': site_specific_footer.site_identity,
        'path': url('<front>'),
      }
    },
    'description': site_owner ? 'This site is managed by the @name'|t({'@name': site_owner}),
    'section_id': 1,
  },
  [
    {
      'section_id': 2,
      'title_class_name': 'ecl-footer-standardised__title--separator',
    },
    {
      'section_id': 2,
      'title_class_name': 'ecl-footer-standardised__title--separator',
    }
  ],
  {
    'section_id': 3,
    'title_class_name': 'ecl-footer-standardised__title--separator',
  },
  {
    'section_id': 6,
  },
  {
    'logo': {
      'path': 'https://europa.eu/',
      'language': current_language_id,
      'src_mobile': _logo_path,
      'src_desktop': _logo_path,
    },
    'description': "Discover more on <a href=':path' class='ecl-link ecl-link--standalone'>@label</a>"|t({
      ':path': 'https://europa.eu/',
      '@label': 'europa.eu'
    }),
    'section_id': 7,
  },
  [
    {
      'title': corporate_footer.contact_title,
      'links': ecl_footer_link(corporate_footer.contact),
      'section_id': 8,
      'title_class_name': 'ecl-footer-standardised__title--separator',
    },
    {
      'title': corporate_footer.social_media_title,
      'links': ecl_footer_link(corporate_footer.social_media),
      'section_id': 8,
      'title_class_name': 'ecl-footer-standardised__title--separator',
    },
    {
      'title': corporate_footer.legal_links_title,
      'links': ecl_footer_link(corporate_footer.legal_links),
      'section_id': 8,
      'title_class_name': 'ecl-footer-standardised__title--separator',
    }
  ],
  {
    'title': corporate_footer.institution_links_title,
    'links': ecl_footer_link(corporate_footer.institution_links),
    'section_id': 9,
    'title_class_name': 'ecl-footer-standardised__title--separator',
  }
] %}

{% include '@ecl-twig/footer-standardised' with {
  'sections': _sections,
} %}
